                    {

                        <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Home" asp-action="dashboard">Dashboard</a>
                        <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Services" asp-action="Services">About</a>
                        <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="padding: 0 !important;">Manage</a>
                            <div class="dropdown-menu fade-up m-0">
                                <a asp-area="" asp-controller="Services" asp-action="Services" class="dropdown-item">Services</a>
                                <a asp-area="" asp-controller="RolesController1" asp-action="Index" class="dropdown-item">Roles</a>
                                <a asp-area="" asp-controller="Users" asp-action="users" class="dropdown-item">Users</a>
                                          
                            </div>        
                        </div>            
                    }else{                
                    <a href="/" class="nav-item nav-link active" style="padding: 0 !important;">Home</a>
                    <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                    <a class="nav-item nav-link" style="padding: 0 !important;" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                    }
                   
                    <!--a href="contact.html" class="nav-item nav-link">Contact</a-->
                </div>
                <div class="mt-4 mt-lg-0 me-lg-n4 py-3 px-4 bg-primary d-flex align-items-center">
                    @*<div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 45px; height: 45px;">
                    <i class="fa fa-phone-alt text-primary"></i>
                    </div>
                    <div class="ms-3">
                    <p class="mb-1 text-white">Emergency 24/7</p>
                    <h5 class="m-0 text-secondary">+012 345 6789</h5>
                    </div>*@
