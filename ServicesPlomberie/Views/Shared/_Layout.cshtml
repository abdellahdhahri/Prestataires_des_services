                        <input type="text" name="search2" class="form-control ms-3" placeholder="Region" aria-label="Search 2">
                        <button type="submit" class="btn d-flex align-items-center ms-3" style="background-color: white;">
                            <i class="bi bi-search me-2"></i>
                            Search
                        </button>
                    </form>


                    <div class="mt-4 mt-lg-0 me-lg-n4 py-0 px-4 bg-primary d-flex align-items-center">
                        <partial name="_LoginPartial.cshtml" />
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <div class="">

    @RenderBody()
